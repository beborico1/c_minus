/* test.c- 
 * A program to test various semantic features
 */

/* Global variable declarations */
int x;
int array[10];

/* Function declaration */
int sum(int a, int b) {
    int result;
    result = a + b;
    return result;
}

/* Function with array parameter */
void printArray(int arr[]) {
    int i;
    i = 0;
    while (i < 10) {
        output(arr[i]);
        i = i + 1;
    }
}

/* Main function with various semantic cases */
void main(void) {
    int a;
    int b;
    int i;

    /* Valid variable assignment */
    a = 5;
    b = 10;
    
    /* Valid function call */
    x = sum(a, b);
    output(x);  /* Should print 15 */
    
    /* Array initialization */
    i = 0;
    while (i < 10) {
        array[i] = i * 2;
        i = i + 1;
    }
    
    /* Valid array access */
    output(array[5]);  /* Should print 10 */
    
    /* Valid function with array argument */
    printArray(array);
    
    /* Uncomment the following to test error detection */
    /* Undeclared variable */
    /* y = 20; */
    
    /* Type error (not possible with basic int-only C-) */
    /* a = sum; */
    
    /* Array access with non-integer index */
    /* array[sum] = 0; */
    
    /* Incorrect array use (treating array as scalar) */
    /* a = array; */
    
    /* Return type error */
    /* return 5; */
} 