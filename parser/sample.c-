/* Programa de muestra en C-
   Calcula el factorial de un n√∫mero
*/

int factorial(int n)
{
    if (n <= 1) /* Caso base */
    {
        return 1;
    }
    else
    {
        return n * factorial(n-1);
    }
}

void main(void)
{
    int x;      /* valor de entrada */
    int result; /* resultado */
    
    /* Inicializar variable */
    x = 5;
    
    /* Calcular factorial */
    result = factorial(x);
}